@using Day2_03.Models
@model  List<Employee>


<h3>Employee Controller -- Index Page</h3>
<hr/>

@* 
    <h3> @ViewBag.Message </h3>  
*@

<a href="/Employee/Create">Create New</a>

<table border="2" width="600">
    <tr>
        <th>Employee Id</th>
        <th>Employee Name</th>
        <th> Job</th>
        <th>Sal</th>
        <th>Deptno</th>
        <th></th>
    </tr>

    @foreach(Employee item in Model)
    {
         <tr>
            <td>@item.EmployeeId</td>
            <td>@item.EmployeeName</td>
            <td>@item.Job</td>
            <td>@item.Sal</td>     
             <td>@item.Deptno</td>     

            <td>
                <a href="/Employee/Details/@item.EmployeeId">Details</a> |
                <a href="/Employee/Edit/@item.EmployeeId">Edit</a> |
                <a href="/Employee/Delete/@item.EmployeeId">Delete</a>  
            </td>
         </tr>
    }

   
</table>